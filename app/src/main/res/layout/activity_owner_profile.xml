<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vectorbrains.retrofitexample.OwnerProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/iv_owner_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_placeholder" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/login_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:minWidth="100dp"
                    android:text="Login"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/login_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/login_label"
                    android:text="Login"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/login_label"
                    android:layout_toLeftOf="@id/login_value"
                    android:minWidth="100dp"
                    android:text="id"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_value"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/id_label"
                    android:text="id value"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/id_label"
                    android:layout_toLeftOf="@id/id_value"
                    android:minWidth="100dp"
                    android:text="Type"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_value"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/type_label"
                    android:text="type value"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/repo_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/type_label"
                    android:layout_toLeftOf="@id/type_value"
                    android:minWidth="100dp"
                    android:text="Repo Url"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/repo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/type_value"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/repo_label"
                    android:text="Repo url value"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
